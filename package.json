{
  "name": "painter-and-figure",
  "description": "A collection of web components built with vanilla JavaScript and TypeScript.",
  "private": false,
  "version": "0.7.0",
  "type": "module",
  "main": "./package/install.js",
  "bin": "./package/install.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "vite --mode development",
    "build": "tsc && vite build --mode production",
    "test-story": "vite build --mode test-story && vite preview --port 4173",
    "preview": "vite preview",
    "run-on-start": "node ./scripts/run-on-startup.js",
    "test": "tsc",
    "e2e": "set NODE_ENV=test && npx playwright test",
    "e2e:update": "set NODE_ENV=test && npx playwright test --update-snapshots",
    "e2e:test-server": "vite --mode test --config tests/vite.testing-config.ts",
    "e2e:quick" : "npm run e2e -- --project=chromium",
    "e2e:ui": "npm run e2e -- --ui"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@tailwindcss/vite": "^4.1.11",
    "@types/node": "^24.3.1",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.8.3",
    "vite": "^7.1.6"
  },
  "files": [
    "src/**/*",
    "public/*",
    "package/**/*",
    "scripts/**",
    "*"
  ],
  "keywords": [
    "web components",
    "vanilla js",
    "custom elements",
    "ui components"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChenPeleg/painter-and-figure.git"
  },
  "author": "Chen Peleg",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ChenPeleg/painter-and-figure/issues"
  },
  "homepage": "https://chenpeleg.github.io/painter-and-figure/",
  "web-types": "./web-types.json"
}
